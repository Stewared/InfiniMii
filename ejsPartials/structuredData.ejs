<% if (typeof breadcrumbs === 'undefined') { %>
<!-- Organization Schema -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "InfiniMii",
  "url": "<%= baseUrl %>",
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "<%= baseUrl %>/searchResults?q={search_term_string}"
    },
    "query-input": "required name=search_term_string"
  }
}
</script>
<% } else { %>
<!-- Breadcrumb Schema -->
