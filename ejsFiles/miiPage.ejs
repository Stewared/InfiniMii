    <body>
        <%- include('globalStyle') %>
        <% 
            const imgPath = isPrivate ? 'privateMiiImgs' : 'miiImgs';
            const qrPath = isPrivate ? 'privateMiiQRs' : 'miiQRs';
        %>
        <%- include('header') %>
        <%- include('accountDisplay') %>

        <main class="content" role="main">
            <%- include('sidebar') %>

            <article class="mii-id-card" style="--favorite-color: <%= decodeColor(mii.general?.favoriteColor) || decodeColor(0) %>;" itemscope itemtype="https://schema.org/CreativeWork">
                <!-- Card Header -->
                <header class="id-card-header">
                    <h2 itemprop="name">Mii ID Card</h2>
                    <div class="card-number" role="button" tabindex="0" onclick="copyId()" aria-label="Copy Mii ID">ID: <%= mii.id %></div>
