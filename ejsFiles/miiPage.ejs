                <!-- Main Card Body -->
                <div class="id-card-body">
                    <!-- Left side: Mii Image -->
                    <figure class="id-card-photo">
                        <img src="/<%= imgPath %>/<%= mii.id %>.png" 
                            onerror="this.src='/<%= imgPath %>/<%= mii.id %>.png'"
                            alt="<%= mii.meta.name %> Mii Character Face"
                            itemprop="image"
                            width="400" 
                            height="400"
                            fetchpriority="high">
                        <figcaption class="qr-code">
                            <a href="/<%= qrPath %>/<%= mii.id %>.png" target="_blank">
                                <img src="/<%= qrPath %>/<%= mii.id %>.png" 
                                    onerror="this.src='/<%= qrPath %>/<%= mii.id %>.png'"
                                    alt="QR Code for <%= mii.meta.name %> - Scan with 3DS, Wii U, Tomodachi Life, or Miitomo" 
                                    width="200" 
                                    height="200"
                                    loading="lazy">
                            </a>
                            <a href="/<%= qrPath %>/<%= mii.id %>.png" target="_blank" rel="noopener">
                                <span>Download for 3DS</span>
                            </a>
