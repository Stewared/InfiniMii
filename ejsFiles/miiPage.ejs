<!DOCTYPE html>
<html>
    <head>
        <%
        // Set page-specific variables for meta tags
        const pageTitle = `${mii.meta.name} - InfiniMii | Download Mii Character`;
        const pageDesc = mii.desc || `Download ${mii.meta.name} Mii character${mii.official ? ' (Official Nintendo Mii)' : ''} for Wii, 3DS, Wii U, Switch. Get QR code and convert to any format.`;
