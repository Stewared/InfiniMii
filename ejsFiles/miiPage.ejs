        const keywords = `${mii.meta.name}, ${mii.official ? 'official ' : ''}mii character, download mii, mii qr code`;
        const breadcrumbs = [
            { name: 'Home', url: '/' },
            { name: mii.official ? 'Official Miis' : 'Community Miis', url: mii.official ? '/official' : '/top' },
